<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.wzs.mapper.AccountMap">
    <select id="getIdMatchCount" resultType="int">
        select count(*) from account where
        id = #{id} and password = #{password}
    </select>
    <select id="getEmailMatchCount" resultType="int">
        select count(*) from account where
        email = #{email} and password = #{password}
    </select>
    <select id="getAdminMatch" resultType="int">
        select count(*) from admin where
        email = #{email} and password = #{password}
    </select>

    <select id="getIdMatch" resultType="int">
        select count(*) from account where
        id = #{id}
    </select>
    <select id="findAccountById" resultType="com.wzs.bean.Account" parameterType="long">
        select * from account where id = #{id}
    </select>
    <select id="findAccountByEmail" resultType="com.wzs.bean.Account">
        select * from account where email = #{email}
    </select>
    <insert id="addAccount">
        insert into account values
        (null, #{email}, #{password})
    </insert>
    <update id="resetPassword">
        update account set password = #{password}
        where id = #{id}
    </update>
    <select id="getPassword" resultType="String" parameterType="long">
        select password from account where id = #{id}
    </select>


</mapper>