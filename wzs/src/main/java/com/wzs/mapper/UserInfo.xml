<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.wzs.mapper.UserInfoMap">
    <select id="findInfoById" resultType="com.wzs.bean.UserInfo" parameterType="long">
        select * from user_info where id = #{id}
    </select>
    <select id="findInfoByEmail" resultType="com.wzs.bean.UserInfo">
        select * from user_info where email = #{email}
    </select>

    <select id="getEmailCount" resultType="int">
        select count(*) from user_info where
        email = #{email}
    </select>

    <update id="editUserInfo" parameterType="com.wzs.bean.UserInfo">
        update user_info set name = #{name} , sex = #{sex},
       address = #{address}, signature= #{signature}, education= #{education}, works== #{work},
       expertise= #{expertise},interest= #{interest},introduction= #{introduction},contribution== #{contribution}
        where id = #{id}
    </update>

    <insert id="addUserInfo" parameterType="com.wzs.bean.UserInfo">
        insert into user_info values
        (NULL,#{email}, #{name},#{sex},#{address},#{signature},#{education},#{work},#{expertise},#{interest}, #{introduction},#{contribution})
    </insert>

    <select id="getAllInfos" resultType="com.wzs.bean.UserInfo">
        select * from user_info
    </select>

</mapper>